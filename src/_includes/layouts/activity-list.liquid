{% include partials/utility/html-head %}

<body>
<div class="outer-wrapper">
    {% include partials/page-header/_page-header %}

    <main class="page-content inner-wrapper">
        <h2>{{ title }}</h2>
        {{ content }}

        {% include partials/loop-activity-categories headerlvl:"h3" %}

        <ol class="desktop-columns">
            {%- for activity in activities limit:8 -%}
                <li class="list-item">
                    {% include partials/activity headerlvl:"h3" %}
                </li>
            {%- endfor -%}
        </ol>

        {% if category.totalPages > 1 %}
            <ul>
                {% if category.pageSlugs.previous %}
                    <li>
                        <a href="/{{ activitiesURL }}/{{ translations[locale].category }}/{{ category.pageSlugs.previous }}/">
                            {{ translations[locale].previous }}
                        </a>
                    </li>
                {% endif %}
                {% if category.pageSlugs.next %}
                    <li>
                        <a href="/{{ activitiesURL }}/{{ translations[locale].category }}/{{ category.pageSlugs.next }}/">
                            {{ translations[locale].next }}
                        </a>
                    </li>
                {% endif %}
            </ul>
        {% endif %}
         
    </main>

    {% include partials/page-footer/_page-footer %}
</div>
</body>
</html>
