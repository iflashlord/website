<!doctype html>
<html lang="{{ locale }}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{{ title or translations[locale].title }}</title>
    <link rel="stylesheet" href="/assets/css/style.css">
    
    <link rel="preload" as="font" href="/assets/fonts/Fabrik-Bold.woff2" type="font/woff2" crossorigin="anonymous">
    <link rel="preload" as="font" href="/assets/fonts/Fabrik-Regular.woff2" type="font/woff2" crossorigin="anonymous">
    <link rel="preload" as="font" href="/assets/fonts/Roboto-Bold.woff2" type="font/woff2" crossorigin="anonymous">
    <link rel="preload" as="font" href="/assets/fonts/Roboto-BoldItalic.woff2" type="font/woff2" crossorigin="anonymous">
    <link rel="preload" as="font" href="/assets/fonts/Roboto-Italic.woff2" type="font/woff2" crossorigin="anonymous">
    <link rel="preload" as="font" href="/assets/fonts/Roboto-Regular.woff2" type="font/woff2" crossorigin="anonymous">
    
    <meta name="description" content="{{ translations[locale].metaDescription }}">
    <meta name="theme-color" content="#">

    {% for lgg in site.languages %}
    {% assign translatedUrl = "/" + lgg.code + "/" %}

    {% for item in collections.all %}
            {% if item.data.key == key and item.data.locale == lgg.code %}
                {% assign translatedUrl = item.url %}
                <link rel="alternate" hreflang="{{ lgg.code }}" href="{{ translatedUrl }}" />
            {% endif %}
        {% endfor %}
    {% endfor %}

    {% if locale == 'en' %}
        {% assign canonical = collections.canonical %} 
        {% for canoo in canonical %}
            {% if key == canoo.data.key %}
                <link rel="canonical" href="{{ canoo.url }}" />
            {% endif %}
        {% endfor %}
    {% endif %}

    <meta property="og:site_name" content="{{ translations[locale].siteName }}">
    <meta property="og:title" content="{{ title or translations[locale].siteName }}" />
    <meta property="og:description" content="{{ translations[locale].metaDescription }}"/>
    <meta property="og:image" content="">
    <meta property="og:image:alt" content="" />
    <meta property="og:updated_time" content="{{ site.buildTime | date: "%s" }}" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{ page.permalink }}">

    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content="{{ title or translations[locale].siteName }}" />
    <meta name="twitter:description" content="{{ translations[locale].metaDescription }}" />
    <meta name="twitter:image" content="" />
    <meta name="twitter:image:alt" content="" />

</head>

{% comment %}
